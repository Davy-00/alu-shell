#!/usr/bin/env bash
# Manages manage_my_process by starting, stopping, or restarting it

PID_FILE="/var/run/my_process.pid"

start_process() {
    ./manage_my_process &
    echo "$!" > "$PID_FILE"
}

stop_process() {
    if [ -f "$PID_FILE" ]; then
        pid=$(cat "$PID_FILE")
        kill "$pid" 2>/dev/null
        rm "$PID_FILE"
    fi
}

case "$1" in 
    start)
        start_process
        echo "manage_my_process started"
        ;;
    stop)
        stop_process
        echo "manage_my_process stopped"
        ;;
    restart)
        stop_process
        start_process
        echo "manage_my_process restarted"
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

exit 0

